<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginLeft="@dimen/dialog_margin_right_left"
    android:layout_marginRight="@dimen/dialog_margin_right_left"
    android:background="@drawable/spr_dialog_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_warning_title"
        android:layout_marginTop="@dimen/dialog_title_margin_top"
        android:textStyle="bold"
        android:textSize="@dimen/dialog_txt_title"
        android:textColor="@color/black"
        android:text="@string/notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:gravity="center"
        android:padding="@dimen/dialog_pading_content"
        android:textSize="@dimen/dialog_txt_content"
        android:textColor="@color/black"
        android:id="@+id/txt_warning_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View

        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_height_button">
        <TextView
            android:visibility="gone"
            android:id="@+id/btn_warning_cancel"
            android:gravity="center"
            android:text="@string/btn_no"
            android:textColor="@color/red"
            android:textSize="@dimen/dialog_txt_title"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <View
            android:visibility="gone"
            android:id="@+id/view_warning"
            android:background="@color/gray"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView

            android:id="@+id/btn_warning_ok"
            android:gravity="center"
            android:text="@string/btn_yes"
            android:textColor="@color/app_bar"
            android:textSize="@dimen/dialog_txt_title"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>



</LinearLayout>