<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/dp7"
        android:textAllCaps="true"
        android:paddingHorizontal="@dimen/dp15"
        android:background="#F6B70F"
        android:paddingVertical="3dp"
        android:id="@+id/tvTitleExerCurrent"
        android:textSize="16sp"
        style="@style/text_font_utm_avo_bold"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:text="TUẦN:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:minLines="2"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="#FFFEEB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleExerCurrent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_menu_baitap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleExerCurrent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:text="Bạn đã làm hết bài tập tuần này, mời bạn làm tiếp vào tuần sau nhé"
        android:id="@+id/txt_notify_need"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/txt_name_exer"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleExerCurrent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>