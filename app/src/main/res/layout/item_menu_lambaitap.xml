<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width_item_menu"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_item">

    <ImageView
        app:srcCompat="@drawable/ic_exer_maths"
        android:id="@+id/img_item_menu_lambai"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_item_menu"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_below="@+id/img_item_menu_lambai"
        android:maxLines="2"
        android:paddingHorizontal="@dimen/dp1"
        android:paddingVertical="@dimen/dp5"
        android:id="@+id/txt_name_menu_lambai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tiếng việt - Tuần 1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_14sp" />


</RelativeLayout>