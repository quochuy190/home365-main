<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_sapxep"
    android:layout_width="@dimen/width_item_menu"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_item">

    <ImageView
        android:id="@+id/img_itemsapxep_bg"
        android:layout_width="@dimen/width_item_menu"
        android:layout_height="@dimen/width_item_menu"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/txt_itemsapxep_dapan"
        android:layout_width="@dimen/width_item_menu"
        android:layout_height="@dimen/width_item_menu"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:maxLines="3"
        android:text="Tiếng việt"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_xeptrung" />
</RelativeLayout>