<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:adjustViewBounds="true"
        android:padding="@dimen/dp5"
        android:src="@drawable/ic_luyenthi_orange"
        android:id="@+id/img_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
       android:paddingLeft="@dimen/dp7"
        android:paddingRight="@dimen/dp7"
        android:text="Bài 1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_15sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_dalam"
        app:layout_constraintEnd_toEndOf="@+id/img_background"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/img_background"
        app:layout_constraintTop_toTopOf="@+id/img_background"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:visibility="gone"
        android:textStyle="italic"
        android:id="@+id/txt_dalam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Đã làm"
        android:paddingRight="@dimen/dp7"
        android:paddingLeft="@dimen/dp7"
        android:layout_marginTop="@dimen/dp2"
        android:textColor="@color/red_test365"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_background"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/img_background"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/txt_point"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:paddingLeft="@dimen/dp7"
        android:paddingRight="@dimen/dp7"
        android:textColor="@color/black"
        android:textSize="@dimen/text_15sp"
        android:textStyle="italic"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/img_background"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/img_background"
        app:layout_constraintTop_toBottomOf="@+id/txt_dalam"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>