<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp10"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/dp5"
        android:elevation="@dimen/dp10"
        android:layout_margin="@dimen/dp10"
        android:id="@+id/cvBaitap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp15"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBook"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp5"
                android:padding="@dimen/dp15"
                android:src="@drawable/ic_book"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.13" />

            <Button
                android:id="@+id/btnLamBaitap"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp30"
                android:layout_marginEnd="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp3"
                android:background="@drawable/spr_button_blue_click"
                android:fontFamily="@font/roboto_bold"
                android:padding="@dimen/dp5"
                android:text="Làm bài tập"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/imgBook"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgBook"
                app:layout_constraintWidth_percent="0.15" />

            <TextView
                android:id="@+id/tvNameBaitap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp5"
                android:paddingVertical="@dimen/dp1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_17sp"
                app:layout_constraintBottom_toTopOf="@+id/tvNameRequi"
                app:layout_constraintEnd_toStartOf="@+id/btnLamBaitap"
                app:layout_constraintStart_toEndOf="@+id/imgBook"
                app:layout_constraintTop_toTopOf="@+id/imgBook"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Cánh diều" />

            <TextView
                android:id="@+id/tvNameRequi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp5"
                android:paddingVertical="@dimen/dp1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_17sp"
                app:layout_constraintBottom_toBottomOf="@+id/imgBook"
                app:layout_constraintEnd_toStartOf="@+id/btnLamBaitap"
                app:layout_constraintStart_toEndOf="@+id/imgBook"
                app:layout_constraintTop_toBottomOf="@+id/tvNameBaitap"
                tools:text="Cánh diều" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>