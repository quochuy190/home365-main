<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_background">

        <ImageView
            android:layout_width="@dimen/margin_left_lambai"
            android:layout_height="@dimen/margin_left_lambai"
            android:layout_margin="@dimen/dp5" />

        <TextView
            android:id="@+id/txt_lable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/spr_lable_lambai"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:text=""
            android:textColor="@color/lable_lambai"
            android:textSize="@dimen/text_lable_lambai"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/margin_left_lambai"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_xemdiem"
        app:layout_constraintEnd_toEndOf="@+id/img_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_lable">


        <ImageView
            android:id="@+id/img_rotrung_1"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            android:layout_marginBottom="@dimen/dp5"
            android:padding="@dimen/dp3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/txt_rotrung_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_ro_trung"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_xeptrung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/img_rotrung_1"
            app:layout_constraintRight_toRightOf="@+id/img_rotrung_1" />

        <ImageView
            android:id="@+id/img_rotrung_2"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_egg_2"
            android:layout_marginBottom="@dimen/dp5"
            android:padding="@dimen/dp3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/txt_rotrung_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_ro_trung"

            android:textColor="@color/white"
            android:textSize="@dimen/txt_xeptrung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/img_rotrung_2"
            app:layout_constraintRight_toRightOf="@id/img_rotrung_2" />

        <ImageView
            android:id="@+id/img_rotrung_3"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            android:layout_marginLeft="@dimen/margin_egg_3"
            android:layout_marginBottom="@dimen/dp5"
            android:padding="@dimen/dp3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/txt_rotrung_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_ro_trung"

            android:textColor="@color/white"

            android:textSize="@dimen/txt_xeptrung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/img_rotrung_3"
            app:layout_constraintRight_toRightOf="@id/img_rotrung_3" />

        <ImageView
            android:id="@+id/img_rotrung_4"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_egg_4"
            android:layout_marginBottom="@dimen/dp5"
            android:padding="@dimen/dp3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/txt_rotrung_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_ro_trung"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_xeptrung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/img_rotrung_4"
            app:layout_constraintRight_toRightOf="@id/img_rotrung_4" />

        <RelativeLayout
            android:id="@+id/rl_trung1"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_trung1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/pading_egg" />

            <TextView
                android:id="@+id/txt_trung1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/app_bar"
                android:textSize="@dimen/txt_xeptrung" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_trung2"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            android:layout_marginLeft="@dimen/margin_egg_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_trung2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/pading_egg" />

            <TextView
                android:id="@+id/txt_trung2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:textColor="@color/app_bar"
                android:textSize="@dimen/txt_xeptrung" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_trung3"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            android:layout_marginLeft="@dimen/margin_egg_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_trung3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/pading_egg" />

            <TextView
                android:id="@+id/txt_trung3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/app_bar"
                android:textSize="@dimen/txt_xeptrung" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_trung4"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            android:layout_marginLeft="@dimen/margin_egg_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_trung4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/pading_egg" />

            <TextView
                android:id="@+id/txt_trung4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/app_bar"
                android:textSize="@dimen/txt_xeptrung" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_cauhoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_lable"
        android:padding="@dimen/dp5"
        android:textColor="@color/white"
        android:textSize="@dimen/text_content_cauhoi"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_lable" />

    <Button
        android:visibility="visible"
        android:id="@+id/btn_xemdiem"
        android:layout_width="@dimen/btn_showpoint_width"
        android:layout_height="@dimen/btn_showpoint_hight"
        android:layout_marginBottom="@dimen/dp3"
        android:background="@drawable/btn_1"
        android:fontFamily="@font/roboto_bold"
        android:padding="@dimen/dp5"
        android:text="@string/txt_showpoint"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_showpoint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <RelativeLayout
        android:id="@+id/ll_dapan_xeptrung"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hight_egg_dapan"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_lable">

        <ImageView
            android:id="@+id/bg_dapan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txt_title_dapan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:text="Đáp án:"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_17sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_dapan_xeptrung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title_dapan">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_player_again"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/btn_xemdiem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_lable">

        <ImageView
            android:id="@+id/bg_dapan_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txt_title_dapan_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:text="Đáp án:"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_dapan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title_dapan_again">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/txt_title_anwser_chil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:text="Bé trả lời:"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_anwser_chil"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title_anwser_chil">

        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_anwser_chil"
        android:layout_width="@dimen/icon_anwser_review"
        android:layout_height="@dimen/icon_anwser_review"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/dp5"
        android:src="@drawable/icon_anwser_true"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_lable" />

</androidx.constraintlayout.widget.ConstraintLayout>