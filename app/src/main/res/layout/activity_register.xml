<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llLoginInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_top_login"
        android:background="@drawable/spr_bg_login"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.95"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp7"
            android:fontFamily="@font/utm_avo"
            android:id="@+id/txtTitleLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_register_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:fontFamily="@font/utm_avo"
            android:id="@+id/txtLableMahocsinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/spr_click_textview"
            android:paddingVertical="@dimen/dp5"
            android:text="Chọn lớp *"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/llMahocsinh"
            app:layout_constraintTop_toBottomOf="@+id/llDistrict" />

        <RelativeLayout

            android:id="@+id/llMahocsinh"
            android:paddingHorizontal="@dimen/dp5"
            app:layout_constraintWidth_percent="0.45"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spr_login_edt"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/llCodeLevel"
            app:layout_constraintTop_toBottomOf="@+id/txtLableMahocsinh">

            <EditText
                android:fontFamily="@font/utm_avo"
                android:enabled="false"
                android:focusable="false"
                android:id="@+id/edtLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp5"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="Lớp"
                android:imeOptions="flagNoFullscreen|actionNext"
                android:inputType="text"
                android:padding="@dimen/dp7"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_login" />

            <ImageView
                android:id="@+id/imgLevel"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:src="@drawable/ic_arrow_down"
                android:tint="@color/gray" />
        </RelativeLayout>
        <TextView
            android:fontFamily="@font/utm_avo"
            android:layout_marginTop="@dimen/dp7"
            android:id="@+id/txtLableSchools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spr_click_textview"
            android:paddingVertical="@dimen/dp5"
            android:text="@string/lable_shools"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/llSchools"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleLogin" />
        <RelativeLayout
            app:layout_constraintStart_toEndOf="@+id/llDistrict"
            android:paddingHorizontal="@dimen/dp5"
            android:id="@+id/llSchools"
            app:layout_constraintWidth_percent="0.45"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spr_login_edt"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtLableSchools">

            <EditText
                android:fontFamily="@font/utm_avo"
                android:singleLine="true"
                android:enabled="false"
                android:focusable="false"
                android:id="@+id/edtSchools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp5"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="@string/hint_shools"
                android:imeOptions="flagNoFullscreen|actionNext"
                android:inputType="text"
                android:padding="@dimen/dp7"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_login" />

            <ImageView
                android:id="@+id/imgSchools"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:src="@drawable/ic_arrow_down"
                android:tint="@color/gray" />
        </RelativeLayout>

        <TextView
            android:fontFamily="@font/utm_avo"
            android:layout_marginTop="@dimen/dp7"
            android:id="@+id/txtCodeLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spr_click_textview"
            android:paddingVertical="@dimen/dp5"
            android:text="@string/lable_pupil"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/llCodeLevel"
            app:layout_constraintTop_toBottomOf="@+id/llSchools" />
        <RelativeLayout
            app:layout_constraintStart_toEndOf="@id/llMahocsinh"
            android:paddingHorizontal="@dimen/dp5"
            android:id="@+id/llCodeLevel"
            app:layout_constraintWidth_percent="0.45"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spr_login_edt"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCodeLevel">

            <EditText
                android:fontFamily="@font/utm_avo"
                android:id="@+id/edtCodePupul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp5"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="@string/hint_pupil"
                android:imeOptions="flagNoFullscreen|actionNext"
                android:inputType="text"
                android:padding="@dimen/dp7"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_login" />

        </RelativeLayout>

        <TextView
            android:fontFamily="@font/utm_avo"
            android:layout_marginTop="@dimen/dp7"
            android:id="@+id/txtDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spr_click_textview"
            android:paddingVertical="@dimen/dp5"
            android:text="@string/lable_district"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/llDistrict"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleLogin" />
        <RelativeLayout
            android:paddingHorizontal="@dimen/dp5"
            android:id="@+id/llDistrict"
            app:layout_constraintWidth_percent="0.45"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spr_login_edt"
            app:layout_constraintEnd_toStartOf="@+id/llSchools"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDistrict">

            <EditText
                android:fontFamily="@font/utm_avo"
                android:enabled="false"
                android:focusable="false"
                android:id="@+id/edtDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp5"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="@string/hint_distric"
                android:imeOptions="flagNoFullscreen|actionNext"
                android:inputType="number"
                android:padding="@dimen/dp7"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_login" />

            <ImageView
                android:id="@+id/imgDistrict"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:src="@drawable/ic_arrow_down"
                android:tint="@color/gray" />

        </RelativeLayout>

        <TextView
            android:fontFamily="@font/utm_avo"
            android:layout_marginTop="@dimen/dp7"
            android:id="@+id/txtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spr_click_textview"
            android:paddingVertical="@dimen/dp5"
            android:text="@string/lable_pass"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/llPass"
            app:layout_constraintTop_toBottomOf="@+id/llMahocsinh" />

        <RelativeLayout
            app:layout_constraintEnd_toStartOf="@+id/llPassConfirm"
            android:paddingHorizontal="@dimen/dp5"
            android:id="@+id/llPass"
            app:layout_constraintWidth_percent="0.45"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spr_login_edt"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPass">

            <EditText
                android:fontFamily="@font/utm_avo"
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp5"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="@string/hint_pass"
                android:imeOptions="flagNoFullscreen|actionNext"
                android:inputType="textPassword"
                android:padding="@dimen/dp7"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_login" />
            <ImageView
                android:id="@+id/imgPass"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:padding="@dimen/dp5"
                android:src="@drawable/ic_eye_hide"
                android:tint="@color/gray" />
        </RelativeLayout>

        <TextView
            android:fontFamily="@font/utm_avo"
            android:id="@+id/txtPassConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/spr_click_textview"
            android:paddingVertical="@dimen/dp5"
            android:text="@string/lable_pass_conrifm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@id/llPassConfirm"
            app:layout_constraintTop_toTopOf="@+id/txtPass" />

        <RelativeLayout
            app:layout_constraintStart_toEndOf="@+id/llPass"
            android:paddingHorizontal="@dimen/dp5"
            android:id="@+id/llPassConfirm"
            app:layout_constraintWidth_percent="0.45"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spr_login_edt"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/llPass">

            <EditText
                android:fontFamily="@font/utm_avo"
                android:id="@+id/edtPassConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp5"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="@string/hint_pass"
                android:imeOptions="flagNoFullscreen|actionDone"
                android:inputType="textPassword"
                android:padding="@dimen/dp7"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/text_login" />

            <ImageView
                android:id="@+id/imgPassConfirm"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:padding="@dimen/dp5"
                android:src="@drawable/ic_eye_hide"
                android:tint="@color/gray" />
        </RelativeLayout>


        <Button
            android:fontFamily="@font/utm_avo_bold"
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/spr_button_oragen_click"
            android:text="@string/btn_register"
            android:textColor="@color/white"
            android:textSize="@dimen/text_login"
            app:layout_constraintBottom_toTopOf="@+id/txtLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llPass"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/btnRegister"
            android:fontFamily="@font/utm_avo"
            android:layout_marginBottom="@dimen/dp7"
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_login_guild"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
         />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_back_new"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>